    "semver": "^6.3.0",
    "typescript": "^3.6.3",
    "vuepress": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "git add ."
    ],
    "*.{md}": [
      "npm run format",
      "npm run docs:build",
      "npm run docs:deploy",
      "git add ."
    ]
  }
