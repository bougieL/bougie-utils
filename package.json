    "test": "mocha",
    "prepack": "node scripts/release.js",
    "format": "prettier --write {config,docs,scripts,src,test}/**/*.{md,js,ts} --ignore-path .gitignore"
  },
  "devDependencies": {
    "chalk": "^3.0.0",
    "fs-extra": "^8.1.0",
